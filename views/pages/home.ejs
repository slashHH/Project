<form action="/event/create" method="POST">
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
		 aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<a class="nav-item nav-link" href="/pages/home">Home<span class="sr-only">(current)</span></a>
				<a class="nav-item nav-link" href="/pages/search">Search</a>
				<a class="nav-item nav-link active" href="/pages/create">Create</a>
				<a class="nav-item nav-link" href="/pages/admin">Admin</a>
			</div>
		</div>
	</nav>

	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4">Event Management System</h1>
			<p class="lead">HKBU Event Management System is a web-based system for department and student societies to
				broadcast events and activities as well as registration.
			</p>
		</div>
	</div>


	<div class="container">
		<div class="row">
			<% events.forEach( function(model) { %>
			<div class="card col-sm-6" style="padding:10px 10px 10px 10px">
				<div class="card-body">
					<h4><a href="/event/detail/<%= model.id %>">
							<%= model.name %></a></h4>
					<div class="row">
						<img class="col-sm-4" height="200px" src="<%= model.image_url %>" alt="Card image">
						<div class="col-sm-8">
							<p class="card-text">
								<%= model.short_description %>
							</p>
						</div>
					</div>
				</div>
			</div>
			<% }); %>
		</div>
	</div>